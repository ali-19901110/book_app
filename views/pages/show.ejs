  
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Book Collection</title>
    <link rel="stylesheet" href="styles/base.css">
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/modules.css">


  </head>
  <body>
    <header>
      <%- include('../layout/header') %> 
    </header>
    <main>
      <div>
        <% searchResults.forEach( book => { %>
          <img src='<%=book.img.thumbnail  %>'/>
            <h3><%= book.title%></h3>
            <h4><%= book.authors%></h4>
            <h5><%= book.isbn%></h5>
            <p><%= book.description %></p> 

            
            <section>
              <h2>Add a new Book</h2>
              <form action="/books" method="POST">
                  <legend>Add Book</legend>
                  <input type="hidden" name="title" placeholder="title" value="<%= book.title%>" />
                  <input type="hidden" name="author" placeholder="author" value="<%= book.authors%>" />
                  <input  type="hidden" name="description"  placeholder="Add Description" value="<%=book.description%>">
                  <input type="hidden" name="isbn" placeholder="Category" value="<%= book.isbn%>"/>
                  <input type="hidden" name="image_url" placeholder="Status" value="<%=book.img.thumbnail  %>"/>
                  <div><button type="submit">Save</button></div>
              </form>
          </section>
        <% }) %>
      </div>
   
    </main>
  </body>
</html>